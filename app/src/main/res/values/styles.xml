<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myLayoutText">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myUdacityText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingTop">20sp</item>
        <item name="android:paddingBottom">20sp</item>
    </style>

    <style name="myUdacityWeb">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myImageStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">350sp</item>
        <item name="android:layout_height">200sp</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
</resources>
